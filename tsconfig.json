{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext", "webworker"], // Add "webworker" for service workers
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": false, // Set to false to allow emitting JavaScript files
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    },
    "outDir": "./public", // Output compiled files to the public directory
    "rootDir": "./src" // Root directory for TypeScript files
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/app/components/GoogleAnalytics.tsx",
    "src/firebase-messaging-sw.ts" // Include the service worker TypeScript file
  ],
  "exclude": ["node_modules"]
}